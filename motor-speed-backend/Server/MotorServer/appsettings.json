{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=motors.db"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MotorServer": "Debug"
    }
  },
  "AllowedHosts": "*",
  "MotorEngine": {
    "LibraryPath": "motor_engine.dylib",
    "UpdateInterval": 1000,
    "RealTimeUpdates": true
  },
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:5173",
      "https://motor-speed-temperature.netlify.app",
      "https://motor-speed-temperature.netlify.app/"
    ]
  },
  "SignalR": {
    "EnableDetailedErrors": true,
    "KeepAliveInterval": 15,
    "ClientTimeoutInterval": 30,
    "HandshakeTimeout": 15
  }
}
